<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layHeader"
        android:layout_width="match_parent"
        android:layout_height="52dip"
        android:background="#1BBC9B"
        android:gravity="left|center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="left|center" >

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="32dip"
                android:layout_height="32dip"
                android:layout_margin="8dip"
                android:src="@drawable/earth" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="right|center" >

            <com.jaber.country.CustomTextView
                android:id="@+id/txtNameContinent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dip"
                android:text="پیام ها"
                android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:orientation="vertical" android:background="#ffffff" android:layout_marginLeft="6dip" android:layout_marginRight="6dip" android:layout_marginTop="6dip">

        <com.jaber.country.CustomTextView
            android:id="@+id/txtheader"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:gravity="right"
            android:text="CustomTextView" android:textColor="#1BBC9B" android:textSize="17dip" android:layout_weight="0.5" android:layout_marginRight="8dip" android:layout_marginTop="8dip"/>

        <com.jaber.country.CustomTextView
            android:id="@+id/txtDateMain"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:text="CustomTextView" android:textColor="#000000" android:gravity="bottom|left" android:layout_weight="0.5" android:layout_marginLeft="8dip" android:layout_marginBottom="8dip"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="6dip"
        android:layout_marginRight="6dip"
        android:background="#ffffff"
        android:orientation="vertical" android:layout_marginTop="6dip" android:layout_marginBottom="6dip">

        <com.jaber.country.CustomTextView
            android:id="@+id/txtMainMain"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="CustomTextView" android:layout_margin="8dip" android:textColor="#000000"/>

    </LinearLayout>

</LinearLayout>