<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:gravity="center">

    <LinearLayout
        android:layout_width="280dip"
        android:layout_height="400dip"
        android:orientation="vertical" android:background="#e1e1e1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:background="#1BBC9B"
            android:gravity="center"
            android:orientation="vertical" >

            <com.jaber.country.CustomTextView
                android:id="@+id/customTextView1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="دیگر محصولات"
                android:textColor="#FFFCFE" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.6"
            android:background="#E1E1E1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dip" android:layout_margin="4dip">

                <ImageView
                    android:id="@+id/imgLogoProduct"
                    android:layout_width="0dip"
                    android:layout_height="100dip"
                    android:layout_weight="0.5"
                    android:src="@drawable/alba" />

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical" >

                    <com.jaber.country.CustomTextView
                        android:id="@+id/txtTitleProduct"
                        android:layout_width="fill_parent"
                        android:layout_height="0dip"
                        android:layout_margin="10dip"
                        android:layout_weight="0.5"
                        android:gravity="right"
                        android:text="با  عرض سلام و خسته نباشید\n همانطور که که قول داده شد نسخه جدیدی از برنامه در مارکت بازار قابل دانود است و شما عزیزات می توانید با دانلود نسخه به روز تر هر چه بیشتر از برنامه لذت ببرید ."
                        android:textColor="#1BBC9B"/>

                    <Button
                        android:id="@+id/btnDownload"
                        android:layout_width="fill_parent"
                        android:layout_height="0dip"
                        android:layout_weight="0.5"
                        android:text="بازگشت" />

                </LinearLayout>

            </LinearLayout>

            <com.jaber.country.CustomTextView
                android:id="@+id/txtTextProduct"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_margin="10dip"
                android:gravity="right"
                android:text="با  عرض سلام و خسته نباشید\n همانطور که که قول داده شد نسخه جدیدی از برنامه در مارکت بازار قابل دانود است و شما عزیزات می توانید با دانلود نسخه به روز تر هر چه بیشتر از برنامه لذت ببرید ."
                android:textColor="#000000" android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="#E1E1E1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:src="#A2A29B" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="6dip"
                android:gravity="center" >

                <Button
                    android:id="@+id/btnListMessageProduct"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="لیست پیام" />

                <Button
                    android:id="@+id/btnbackProduct"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="بازگشت" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>